<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_simple_view"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/type_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_one_simple_view"/>

        <TextView
            android:id="@+id/type_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_two_simple_view"/>

        <TextView
            android:id="@+id/type_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_three_simple_view"/>

    </LinearLayout>

</LinearLayout>